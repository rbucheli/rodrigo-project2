<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css"
    rel="stylesheet"integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF"
    crossorigin="anonymous" />
    <link rel="stylesheet" href="/normalize.css">
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:ital@0;1&display=swap" rel="stylesheet">
		<title>Character</title>
	</head>
	<body>
		<h2 class='page-title'>Character Vault</h2>
    <div class="container index-container">
      <% characters.forEach(character => { %>
      <div class='row character-row'>
        <div class="col-md-4 character-portrait">
          <a class='character-portrait-link' href="/characters/<%=character._id; %>">
            <img class="index-image" src="<%=character.image; %>"">
          </a>
        </div>
        <div class="col-md-8">
          <div class="row">
            <h3 class='col-md-12 character-name'><%=character.name; %></h3>
          </div>
          <div class="row">
            <div class="col-md-2">
              <form action="/characters/<%= character.id %>?_method=DELETE" method="POST">
                <button class='btn btn-danger btn-custom-dlt' type="submit">Delete</button>
              </form>
            </div>
              <div class="col-md-2">
                <a class='btn btn-secondary btn-custom-edit' href="/characters/<%=character._id %>/edit">Edit</a>
              </div>
          </div>
        </div>
      </div>
      <%  }) %>
      <div class="row">
        <a class='col-md-3 btn btn-secondary btn-custom-add' href="/characters/new"> Add a New Character</a>
      </div>

	</body>
</html>